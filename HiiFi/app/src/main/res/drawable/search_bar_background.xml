<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#40000000"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="30dp"/>
        </shape>
    </item>

    <!-- Main background layer (Light Grey) -->
    <item>
        <shape>
            <solid android:color="#F5F5F5"/> <!-- Light Grey Background -->
            <corners android:radius="30dp"/>
            <stroke android:color="#D6D6D6" android:width="1dp"/> <!-- Slightly darker grey border -->
        </shape>
    </item>

</layer-list>
