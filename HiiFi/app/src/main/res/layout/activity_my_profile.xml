<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/MyProfileToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:minHeight="?attr/actionBarSize"/>


        <!-- Profile Image -->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/My_profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                android:elevation="10dp"
                android:contentDescription="Profile Image"
                android:layout_centerInParent="true"/>

            <!-- Camera Icon -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@id/My_profile_image"
                android:layout_alignBottom="@id/My_profile_image"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="1dp"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_background"/>

            <!-- Camera Icon -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_camera_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@id/My_profile_image"
                android:layout_alignBottom="@id/My_profile_image"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="6dp"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/round_camera_alt_24"/>
        </RelativeLayout>

        <!-- Profile Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <!-- Name Section -->
            <LinearLayout
                android:id="@+id/Name_Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_person_24"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:id="@+id/my_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ranjanalok961"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- About Section -->
            <LinearLayout
                android:id="@+id/About_Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_info_24"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:paddingTop="8dp"/>

                    <TextView
                        android:id="@+id/my_profile_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smile ðŸ¤”"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:paddingBottom="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Phone Section -->
            <LinearLayout
                android:id="@+id/Phone_Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_phone_24"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="14sp"
                        android:textColor="#888888"/>

                    <TextView
                        android:id="@+id/my_profile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 82520 03650"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:paddingBottom="16dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
